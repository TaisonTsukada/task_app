<div class="container">
    <div class="jumbotron">
        <h1 class="display-4"><%= @task.title%></h1>
        <p><%= @task.content %></p>
        <p>期限：<%= @task.deadline.to_s(:datetime_jp)%></p>
        <p>担当者： <%= @task.user.name%></p>
        <p>ステータス：<%= @task.status.name%></p>
        <%= link_to "一覧へ戻る", root_path, class: "btn btn-light"%>
        <% if user_signed_in?  && current_user.id == @task.user.id %>
            <%= link_to "編集", edit_task_path(@task.id), class: "btn btn-info"%>
            <%= link_to "アサイン", assign_task_path, class: "btn btn-success"%>
        <% end %>
    </div>
</div>